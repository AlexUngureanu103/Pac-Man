<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Pac_Man.Pages.GamePage"
             Title="GamePage"
             xmlns:vm="clr-namespace:Pac_Man.ViewModels"
             x:DataType="vm:GameWindowViewModel">
    <VerticalStackLayout
        Spacing="25"
        Padding="30,0"
        VerticalOptions="Center">

        <Label Text="{Binding GameBoard}"
               FontSize="12"
               CharacterSpacing="4"
               LineBreakMode="CharacterWrap"
            />
        
        <Label
            Text="Game Page"
            FontSize="50"
            FontAttributes="Bold"
            TextColor="Yellow"
            HorizontalOptions="Center"
        />

        <StackLayout>
            <Entry x:Name="entry" TextChanged="OnEntryTextChanged" VerticalOptions="CenterAndExpand" />
        </StackLayout>

        <HorizontalStackLayout HorizontalOptions="Center" Spacing="50">
            <Button
                x:Name="BackButton"
                Text="Back"
                BackgroundColor="Yellow"
                TextColor="Black"
                FontAttributes="Bold"
                WidthRequest="80"
                Clicked="BackButton_Clicked"/>
        </HorizontalStackLayout>

    </VerticalStackLayout>
</ContentPage>