<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Pac_Man.Pages.LobbyWindowPage"
             Title="Lobby Window"
             xmlns:vm="clr-namespace:Pac_Man.ViewModels"
             x:DataType="vm:LobbyWindowViewModel">
    <ScrollView>
        <VerticalStackLayout
        Spacing="25"
        Padding="30,0"
        VerticalOptions="Center">

            <Image
            Source="logo.png"
            SemanticProperties.Description="Pac-Man logo"
            HeightRequest="150"
            HorizontalOptions="Center"
                Margin="0,0,0,20"/>

            <HorizontalStackLayout HorizontalOptions="Center" Spacing="50">
                <Button
                x:Name="GamePageButton"
                Text="Play"
                BackgroundColor="Yellow"
                TextColor="Black"
                FontAttributes="Bold"
                WidthRequest="80"
                Clicked="GamePageButton_Clicked"/>

                <Button
                x:Name="AboutPageButton"
                Text="About"
                BackgroundColor="Yellow"
                TextColor="Black"
                FontAttributes="Bold"
                WidthRequest="80"
                Clicked="AboutPageButton_Clicked"/>
                
            </HorizontalStackLayout>

        </VerticalStackLayout>
    </ScrollView>
</ContentPage>